cabal-version:       2.4

name:                blog-gen
version:             0.1.0.0
synopsis:            A custom blog generator from markup files
description:         This package provides a static blog generator
                     from a custom markup format to HTML.
                     It defines a parser for this custom markup format
                     as well as an html pretty printer EDSL.

                     It is used as the example project in the online book
                     'Learn Haskell Blog Generator'. See the README for
                     more details.
homepage:            https://github.com/sandalbanditten/blog-gen
bug-reports:         https://github.com/sandalbanditten/blog-gen/issues
license:             MIT
license-file:        LICENSE
author:              Tobias Clasen
maintainer:          tobias.nikolai.clasen@gmail.com
category:            Learning, Web
extra-doc-files:
  README.md

common common-settings
  default-language: Haskell2010
  default-extensions:
    LambdaCase
  ghc-options:
    -Wall

library
  import: common-settings
  hs-source-dirs: src
  build-depends:
      base
    , directory
  exposed-modules:
    BlogGen
      BlogGen.Convert
      BlogGen.Html
        BlogGen.Html.Internal
      BlogGen.Markup
	  -- other modules

executable blog-gen
  import: common-settings
  hs-source-dirs: app
  main-is: Main.hs
  other-modules:
    OptParse
  build-depends:
      base
    , directory
    , optparse-applicative
    , blog-gen
  ghc-options:
    -O
